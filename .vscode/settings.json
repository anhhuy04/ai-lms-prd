{
  // Flutter & Dart Settings
  "dart.flutterSdkPath": null,
  "dart.lineLength": 80,
  "dart.enableSdkFormatter": true,
  "dart.enableSnippets": true,
  "dart.previewFlutterUiGuides": true,
  "dart.previewFlutterUiGuidesCustomTracking": true,
  
  // Editor Settings
  "editor.formatOnSave": true,
  "editor.formatOnType": true,
  "editor.rulers": [80],
  "editor.tabSize": 2,
  "editor.insertSpaces": true,
  "editor.detectIndentation": false,
  "editor.codeActionsOnSave": {
    "source.fixAll": "explicit",
    "source.organizeImports": "explicit"
  },
  
  // File Associations
  "files.associations": {
    "*.dart": "dart"
  },
  
  // File Exclusions
  "files.exclude": {
    "**/.dart_tool": true,
    "**/.flutter-plugins": true,
    "**/.flutter-plugins-dependencies": true,
    "**/.packages": true,
    "**/.pub-cache": true,
    "**/.pub": true,
    "**/build": true
  },
  
  // Search Exclusions
  "search.exclude": {
    "**/.dart_tool": true,
    "**/.flutter-plugins": true,
    "**/.flutter-plugins-dependencies": true,
    "**/.packages": true,
    "**/.pub-cache": true,
    "**/.pub": true,
    "**/build": true,
    "**/node_modules": true
  },
  
  // Watcher Exclusions
  "files.watcherExclude": {
    "**/.dart_tool/**": true,
    "**/.flutter-plugins/**": true,
    "**/.flutter-plugins-dependencies/**": true,
    "**/.packages/**": true,
    "**/.pub-cache/**": true,
    "**/.pub/**": true,
    "**/build/**": true,
    "**/node_modules/**": true
  },
  
  // Dart Analysis
  "dart.analysisExcludedFolders": [
    "build",
    ".dart_tool"
  ],
  
  // Flutter Specific
  "dart.flutterCreateAndroidLanguage": "kotlin",
  "dart.flutterCreateIOSLanguage": "swift",
  "dart.flutterCreatePlatforms": ["android", "ios"],
  
  // Language Specific Settings
  "[dart]": {
    "editor.defaultFormatter": "Dart-Code.dart-code",
    "editor.formatOnSave": true,
    "editor.formatOnType": true,
    "editor.selectionHighlight": false,
    "editor.suggest.snippetsPreventQuickSuggestions": false,
    "editor.suggestSelection": "first",
    "editor.tabCompletion": "onlySnippets",
    "editor.wordBasedSuggestions": "off"
  },
  
  "[yaml]": {
    "editor.insertSpaces": true,
    "editor.tabSize": 2,
    "editor.autoIndent": "advanced"
  },
  
  "[json]": {
    "editor.defaultFormatter": "vscode.json-language-features",
    "editor.formatOnSave": true
  },
  
  "[markdown]": {
    "editor.wordWrap": "on",
    "editor.quickSuggestions": {
      "comments": "off",
      "strings": "off",
      "other": "off"
    }
  },
  
  // Terminal Settings
  "terminal.integrated.cwd": "${workspaceFolder}",
  
  // Git Settings
  "git.enableSmartCommit": true,
  "git.confirmSync": false,
  "git.autofetch": true,
  
  // Cursor AI Settings (if applicable)
  "cursor.chat.model": "default",
  "cursor.chat.maxTokens": 4000,
  
  // Extensions Recommendations
  "recommendations": [
    "Dart-Code.dart-code",
    "Dart-Code.flutter"
  ]
}
